<Page
    x:Class="PlantAnalyzerApp.LiveArduino"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PlantAnalyzerApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image x:ConnectionId='1' x:Name="normalimage" HorizontalAlignment="Left" Height="160" Margin="55,35,0,0" VerticalAlignment="Top" Width="245" Source="https://plantanalyzerflask.azurewebsites.net/uploads/btemp.JPG"/>
        <Button x:ConnectionId='2' x:Name="button" Content="Connect to PlantAnalyzer" HorizontalAlignment="Left" Margin="55,503,0,0" VerticalAlignment="Top" Width="245"                     />
        <Button x:ConnectionId='3' x:Name="button1" Content="Update Image" HorizontalAlignment="Left" Margin="55,558,0,0" VerticalAlignment="Top" Width="245"                      />
        <TextBox x:ConnectionId='4' x:Name="Infrablue" HorizontalAlignment="Left" Margin="41,200,0,0" TextWrapping="Wrap" Text="Infrablue Image" VerticalAlignment="Top" Width="269"  />
        <Image x:ConnectionId='5' x:Name="image_Copy" HorizontalAlignment="Left" Height="160" Margin="55,248,0,0" VerticalAlignment="Top" Width="245" Source="https://plantanalyzerflask.azurewebsites.net/uploads/ndvitemp.JPG"/>
        <TextBox x:ConnectionId='6' x:Name="NDVI" HorizontalAlignment="Left" Margin="41,413,0,0" TextWrapping="Wrap" Text="NDVI Image" VerticalAlignment="Top" Width="269" />

    </Grid>
</Page>

